#ifndef FINDER_H
#define FINDER_H

class CFinder
{
public:
  double* findMaximumSubarray(double* aValues);

private:
  double[] convertValuesToDifferences(double* aValues);
  double[] findMaximumCrossingSubarray(double* aValues, int left, int middle, int right);
  void clearElements();
private:
  double* iDifferences;
  int iArraySize;
};

#endif
